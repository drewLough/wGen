{
  "compilerOptions": {
    "target": "ES2020",           
    "module": "ES2020",           
    "moduleResolution": "Bundler",
    "lib": ["ES2020", "DOM"],     
    "strict": true,               
    "esModuleInterop": true,      
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "rootDir": "src",             
    "outDir": "dist",             
    "declaration": false          
  },
  "include": ["src"]
}

